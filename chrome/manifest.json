
{
  "manifest_version": 2,

  "name": "RobinBook",
  "description": "Check your local library for books you seen on Amazon.",
  "version": "0.2",

  "permissions": [
    "https://amazon.com/*",
    "http://amazon.com/*"
  ],

  "content_scripts": [
    {
      "js": ["jquery.min.js", "robinbook.js"],
      "matches": ["*://*.amazon.com/*"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "jquery-1.10.1.min.map"
  ]
  
}
